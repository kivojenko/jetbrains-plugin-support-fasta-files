<idea-plugin>
    <id>com.kivojenko.plugin.fasta</id>
    <name>FASTA File Format</name>
    <vendor email="kivojenko@gmail.com">Ksenija Kivojenko</vendor>
    <description>
        <![CDATA[
<p>This plugin supports FASTA file syntax for Bioinformatics research involving nucleic acids (DNA and RNA) and protein sequences.</p>


<h2>What It Does</h2>
<p>The plugin provides full support for editing and analyzing FASTA files directly within your code editor. It recognizes headers, sequences, and file structure, allowing you to navigate and transform sequences easily. It includes built-in transformations like reverse complement and protein translation using BioJava.</p>


<h2>Supported File Extensions</h2>
<ul>
<li>.fasta</li>
<li>.fas</li>
<li>.fa</li>
<li>.fna</li>
<li>.ffn</li>
<li>.faa</li>
<li>.mpfa</li>
<li>.frn</li>
</ul>


<h2>Key Features</h2>
<ul>
<li>Recognizes FASTA files and associates them automatically</li>
<li>Syntax highlighting for DNA, RNA, and protein sequences</li>
<li>Code folding for long sequences and records</li>
<li>Structure view and navigation by headers and records</li>
<li>Code style and formatting for wrapping and spacing</li>
<li>Post-format processing tailored for FASTA content</li>
<li>Editor intentions for sequence transformations:
<ul>
<li>Reverse sequence</li>
<li>Reverse complement (DNA/RNA)</li>
<li>Translate to protein (BioJava)</li>
</ul>
</li>
</ul>
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <change-notes>
        <![CDATA[
        <ul>
            <li>1.0.3: Add support for comments and ambiguous characters in protein sequences.</li>
            <li>1.0.2: Bug fix</li>
            <li>1.0.1: Add inlay hints for length, GC content, ambiguity and molecular weight</li>
            <li>1.0.0: Initial release: grammar, folding, highlighting, structure view</li>
        </ul>
        ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="FASTA File"
                implementationClass="com.kivojenko.plugin.fasta.language.file.FastaFileType"
                fieldName="INSTANCE"
                language="FASTA"
                extensions="fasta;fas;fa;fna;ffn;faa;mpfa;frn"/>


        <lang.parserDefinition
                language="FASTA"
                implementationClass="com.kivojenko.plugin.fasta.language.parser.FastaParserDefinition"/>

        <lang.syntaxHighlighterFactory
                language="FASTA"
                implementationClass="com.kivojenko.plugin.fasta.language.highlight.FastaSyntaxHighlighterFactory"/>

        <lang.foldingBuilder
                language="FASTA"
                implementationClass="com.kivojenko.plugin.fasta.language.folding.FastaFoldingBuilder"/>

        <lang.psiStructureViewFactory
                language="FASTA"
                implementationClass="com.kivojenko.plugin.fasta.language.structure.FastaStructureViewFactory"/>

        <lang.formatter
                language="FASTA"
                implementationClass="com.kivojenko.plugin.fasta.language.formatter.FastaFormattingModelBuilder"/>


        <postFormatProcessor
                implementation="com.kivojenko.plugin.fasta.language.formatter.FastaPostFormatProcessor"/>

        <colorSettingsPage
                implementation="com.kivojenko.plugin.fasta.language.highlight.settings.FastaColorSettingsPage"/>

        <langCodeStyleSettingsProvider
                implementation="com.kivojenko.plugin.fasta.language.formatter.settings.FastaLanguageStyleSettingsProvider"/>

        <navbar implementation="com.kivojenko.plugin.fasta.language.structure.FastaStructureAwareNavbar"/>

        <codeInsight.daemonBoundCodeVisionProvider
                implementation="com.kivojenko.plugin.fasta.language.inspector.visionPlaceholders.FastaAmbiguousVisionProvider"/>
        <codeInsight.daemonBoundCodeVisionProvider
                implementation="com.kivojenko.plugin.fasta.language.inspector.visionPlaceholders.FastaGcContentVisionProvider"/>
        <codeInsight.daemonBoundCodeVisionProvider
                implementation="com.kivojenko.plugin.fasta.language.inspector.visionPlaceholders.FastaMolecularWeightVisionProvider"/>
        <codeInsight.daemonBoundCodeVisionProvider
                implementation="com.kivojenko.plugin.fasta.language.inspector.visionPlaceholders.FastaLengthVisionProvider"/>

        <codeInsight.daemonBoundCodeVisionProvider
                implementation="com.kivojenko.plugin.fasta.language.inspector.FastaCodeVisionProvider"/>

        <intentionAction>
            <language>FASTA</language>
            <className>com.kivojenko.plugin.fasta.actions.ReverseSequenceIntention</className>
            <category>FASTA intentions</category>
        </intentionAction>

        <intentionAction>
            <language>FASTA</language>
            <className>com.kivojenko.plugin.fasta.actions.TranslateToProteinIntention</className>
            <category>FASTA intentions</category>
        </intentionAction>

        <intentionAction>
            <language>FASTA</language>
            <className>com.kivojenko.plugin.fasta.actions.GetReverseComplementIntention</className>
            <category>FASTA intentions</category>
        </intentionAction>
    </extensions>
</idea-plugin>